<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_margin"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:background="@color/secondary_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_intervals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin"
            android:gravity="bottom"
            android:background="?android:attr/selectableItemBackground"
            android:alpha="0.66"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_margin_half"
                android:layout_marginBottom="@dimen/layout_margin_quarter"
                android:src="@mipmap/icon_interval"/>

            <TextView
                android:id="@+id/text_view_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size"
                android:text="6"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_interval_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin"
            android:gravity="bottom"
            android:background="?android:attr/selectableItemBackground"
            android:alpha="0.66"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_margin_half"
                android:layout_marginBottom="@dimen/layout_margin_quarter"
                android:src="@mipmap/icon_high_energy"/>

            <TextView
                android:id="@+id/text_view_interval_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size"
                android:text="20"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_interval_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin"
            android:gravity="bottom"
            android:background="?android:attr/selectableItemBackground"
            android:alpha="0.66"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_margin_half"
                android:layout_marginBottom="@dimen/layout_margin_quarter"
                android:src="@mipmap/icon_low_energy"/>

            <TextView
                android:id="@+id/text_view_interval_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size"
                android:text="10"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/outline"
        android:paddingTop="@dimen/layout_margin_half"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white_transparent"
            android:textSize="@dimen/title2_size"
            android:text="@string/title_intervals"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_decrement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/button_padding"
                android:src="@mipmap/subtract"
                android:background="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/text_view_editing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/title_selected_size"
                android:textStyle="bold"
                android:text="2"/>

            <ImageButton
                android:id="@+id/button_increment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/button_padding"
                android:src="@mipmap/add"
                android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin"
        android:textColor="@android:color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/button_full_deselected"
        android:text="@string/start"/>

</LinearLayout>