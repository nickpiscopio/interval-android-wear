<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_dark">

    <android.support.wearable.view.BoxInsetLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/layout_margin"
            android:animateLayoutChanges="true"
            app:layout_box="all">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin_half"
                android:textColor="@color/page_background"
                android:text="@string/title_intervals"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_interval"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:padding="@dimen/layout_margin"
                    android:textSize="@dimen/title3_size"
                    android:text="1"/>

                <TextView
                    android:id="@+id/text_view_interval_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:padding="@dimen/layout_margin"
                    android:textSize="@dimen/title3_size"
                    android:text="2"/>

                <TextView
                    android:id="@+id/text_view_interval_rest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:padding="@dimen/layout_margin"
                    android:textSize="@dimen/title3_size"
                    android:text="3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/layout_margin">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/button_decrement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/circle_button_padding"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/subtract"
                        android:background="@drawable/circle"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/button_increment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/circle_button_padding"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/add"
                        android:background="@drawable/circle"/>

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:layout_marginBottom="@dimen/start_screen_bottom_margin"
                android:backgroundTint="@color/accent"
                android:text="@string/start"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </android.support.wearable.view.BoxInsetLayout>

</ScrollView>